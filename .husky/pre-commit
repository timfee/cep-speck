#!/usr/bin/env sh
set -e

printf "\n\033[1;36m[husky] pre-commit: formatting + basic linting\033[0m\n"
printf "[husky] staged files:\n" && git diff --cached --name-only || true

printf "\n[husky] running lint-staged (format + basic lint)...\n"
pnpm exec lint-staged

printf "\n\033[1;32m[husky] pre-commit passed.\033[0m\n"
printf "\033[0;33m[husky] Note: Full validation (tests, complexity, etc.) will run on push and in CI.\033[0m\n\n"
