{
  "id": "prd-v1",
  "description": "CEP PRD rules",
  "healPolicy": {
    "maxAttempts": 3,
    "order": "by-severity-then-priority",
    "groupBy": "item",
    "maxChars": 1800,
    "includeExamples": true,
    "style": "bullets"
  },
  "composition": {
    "sections": [
      { "id": "1", "title": "TL;DR", "required": true },
      { "id": "2", "title": "People Problems", "required": true }
    ],
    "labelPattern": "# {n}. {title}",
    "headerRegex": "^#\\s+\\d+\\."
  },
  "globals": {
    "bannedText": {
      "exact": [
        "portal",
        "dashboard"
      ],
      "regex": [
        "->|=>|→|⇒",
        "\\bFR-\\w+\\b|\\bF-\\d+\\b|\\bM-\\d+\\b|\\bPP-\\d+\\b|\\bG-\\d+\\b",
        "\\bSoT\\b",
        
        "(?i)\\b(revolutionary|game-changing|breakthrough|unprecedented|groundbreaking|cutting-edge|next-generation|world-class|industry-leading|best-in-class|state-of-the-art|best-of-breed)\\b",
        
        "(?i)\\b(seamless|robust|comprehensive|holistic|innovative|transformative|dynamic|flexible|scalable|efficient|streamline(d)?)\\b",
        
        "(?i)\\b(solidify our future|strengthen our position|drive growth|unlock value|maximize potential|optimize synergies|accelerate transformation|future-proof|next-level|leverage|empower|enhance|enable|facilitate)\\b",
        
        "(?i)\\b(NPS|Net Promoter Score|satisfaction score|happiness index|engagement score|delight)\\b",
        
        "(?i)\\b(significant|substantial|considerable|dramatically|drastically|huge|massive)\\s+(improvement|savings|impact|reduction|increase)\\b",
        
        "(?i)\\b(moreover|furthermore|indeed|therefore|thus|importantly|in conclusion|in summary|lastly|needless to say|notably|simply put|on the other hand|in other words|that being said)\\b",
        
        "(?i)\\b(at the end of the day|going forward|moving forward|with that said|it goes without saying|needless to say)\\b",
        
        "(?i)\\b(deep dive|circle back|touch base|low-hanging fruit|boil the ocean|think outside the box|paradigm shift|game changer)\\b",
        
        "(?i)\\b(users love|customers love|everyone knows|it's clear that|obviously|of course|naturally)\\b",
        
        "(?i)\\b(amazing|incredible|fantastic|awesome|phenomenal|outstanding|exceptional|remarkable|extraordinary)\\b"
      ]
    }
  },
  "items": [
    {
      "id": "section-count",
      "kind": "structure",
      "priority": 100,
      "severity": "error",
      "params": { "exact": 9, "headerRegex": "^#s+d+." }
    },
    {
      "id": "label-pattern",
      "kind": "structure",
      "priority": 95,
      "severity": "error",
      "params": { "pattern": "# {n}. {title}", "headerRegex": "^#s+d+." }
    },
    {
      "id": "banned-text",
      "kind": "linter",
      "priority": 70,
      "severity": "error",
      "params": { "listsFromPack": true }
    },
    {
      "id": "placeholder-quality",
      "kind": "linter",
      "priority": 65,
      "severity": "error",
      "params": {}
    },
    {
      "id": "word-budget",
      "kind": "linter",
      "priority": 60,
      "severity": "warn",
      "params": { "target": 1400, "hardCap": 1800 }
    },
    {
      "id": "sku-differentiation",
      "kind": "linter",
      "priority": 58,
      "severity": "error",
      "params": { "targetSku": "premium" }
    },
    {
      "id": "technical-feasibility",
      "kind": "linter",
      "priority": 90,
      "severity": "error",
      "params": {}
    },
    {
      "id": "metrics-required",
      "kind": "linter",
      "priority": 80,
      "severity": "error",
      "params": {
        "require": ["units", "timeframe", "SoT"],
        "metricRegex": "^M-d+s*|"
      }
    },
    {
      "id": "competitor-research",
      "kind": "policy",
      "priority": 40,
      "severity": "warn",
      "params": {
        "vendors": [
          "Zscaler",
          "Island",
          "Talon",
          "Microsoft Edge for Business"
        ],
        "recencyDays": 365,
        "requireResearch": true
      }
    },
    {
      "id": "executive-quality",
      "kind": "policy",
      "priority": 30,
      "severity": "warn",
      "params": {
        "enforceFactualTone": true,
        "requireSpecificMetrics": true,
        "banOverExplanation": true
      }
    },
    {
      "id": "adoption-realism",
      "kind": "policy",
      "priority": 85,
      "severity": "warn",
      "params": {}
    },
    {
      "id": "semantic-coherence",
      "kind": "policy",
      "priority": 92,
      "severity": "error",
      "params": { "personas": ["IT Admin", "End User", "Security Team"] }
    }
  ]
}
